@page "/projects"
@using ResumeApplication.Classes

<h1 class="my-4">Projects</h1>

<div class="container">
    @foreach (var project in projects)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h2 class="card-title">@project.Title</h2>
                <p class="card-text">@project.Description</p>
                <p class="card-text"><strong>Technologies:</strong> @string.Join(", ", project.Technologies)</p>
                <a href="@project.GitHubLink" class="btn btn-primary" target="_blank">View on GitHub</a>
            </div>
        </div>
    }
</div>

